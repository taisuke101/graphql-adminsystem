{
    "compilerOptions": {
        /* Basic Options */
        "target": "ES2019",                       
        "module": "commonjs",                    
    
        /* Strict Type-Checking Options */
        "strict": false,                          
    
        /* Module Resolution Options */
        "esModuleInterop": true,                 
    
        /* Advanced Options */
        "skipLibCheck": true,                   
        "forceConsistentCasingInFileNames": true  
    }
}